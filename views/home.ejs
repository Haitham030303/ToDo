<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="main.css" />

    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <style>
      html {
        background-color: #e4e9fd;
        min-height: 1000px;
        background-image: url("ocean.jpg");
        background-size: 100vw 100vh;
        background-attachment: fixed;
      }

      #display-box {
        background-color: rgba(255, 255, 255, 0.6);
      }
    </style>
    <title>Home Page | ToDo</title>
  </head>
  <body>
    <header>
      <nav>
        <input type="checkbox" id="checkbox" />
        <label for="checkbox">
          <i class="fas fa-bars" id="btn"></i>
          <i class="fas fa-times" id="cancel"></i>
        </label>
        <img src="logo.png" alt="Logo" />
        <ul>
          <li><a href="#">Tasks</a></li>
          <li><a href="/today">My Day</a></li>
          <li><a href="/completed">Completed</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <div id="display-box">
        <% if (tasks.length !== 0) { %>
        <center>
          <h2><b>Tasks</b></h2>
        </center>
        <% } %>
        <ul>
          <%tasks.forEach((task) => {%>
          <li>
            <form action="/api/tasks/delete/1" method="post">
              <input
                type="checkbox"
                name="checkbox"
                value="<%=task.id%>"
                class="task-checkbox"
                onchange="this.form.submit()"
              />
              <span><%=task.task%></span>
              <% if (task.dueDate === new
              Date().toJSON().slice(0,10).replace(/-/g,'-')) { %>
              <span class="due-date">Today</span>
              <%} else if (task.dueDate === new Date(new Date().setDate(new
              Date().getDate() + 1)).toJSON().slice(0,10).replace(/-/g,'-')){ %>
              <span class="due-date">Tomorrow</span>
              <%} else {%>
              <span class="due-date"><%=task.dueDate%></span>
              <% } %>
            </form>
          </li>
          <% }) %>
        </ul>
        <form action="/api/tasks" method="post">
          <input
            autofocus
            type="text"
            name="taskAdded"
            placeholder="Add a task with a due date..."
          />
          <input type="date" name="dueDate" />
          <input type="submit" value="+" />
        </form>
      </div>
    </main>
  </body>
</html>
